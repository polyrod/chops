/*
  S5 Test Program
*/


aconfig {
  defaultoport: "foo"
  oport: "echo"
  oport: "distort"
  oport: "bass"
}

          bgn   "s5"                  // Begin of Program "s1"
          bpm   192.0                 // Set sequencer BPM 
          sig   8,8                   // Set sequencer TimeSignature

          set   eight,1.0/8.0
//------------------------------------
          sel   bass
          ld    "jungbass.wav"
          fit   0.5
          stop

          mrk   m0,0.0
          mrk   m1,eight
          mrk   m2,2.0*eight
          mrk   m3,3.0*eight
          mrk   m4,4.0*eight
          mrk   m5,5.0*eight
          mrk   m6,6.0*eight
          mrk   m7,7.0*eight

//---------------------------------
          sel   hp                    // select a1 as current context/setup/..?   TODO: find suiting name 
          ld    "Hot_Pants.wav"           // Load audio.wav into current workspace
          fit   1.0
          stop

          mrk   m0,0.0
          mrk   m1,eight
          mrk   m2,2.0*eight
          mrk   m3,3.0*eight
          mrk   m4,4.0*eight
          mrk   m5,5.0*eight
          mrk   m6,6.0*eight
          mrk   m7,7.0*eight

